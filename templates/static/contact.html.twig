{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<h1 class="text-dark"><marquee>contact</marquee></h1>

{# {{ form(form) }} #}	
	{{ form_start(form) }}
	{{ form_label(form.nom , 'Nom', {'label_attr':{'class':'fw-bold text-dark'}}) }}
	{{ form_widget(form.nom , {'attr':{'class':'form-control bg-success', 'placeholder':' Saisir votre nom'}}) }}
	<br>

	{{ form_label(form.email) }}
	{{ form_widget(form.email , {'attr':{'class':'form-control bg-danger', 'placeholder':' Saisir votre email'}})}}

<br>

	{{ form_label(form.sujet) }}
	{{ form_widget(form.sujet , {'attr':{'class':'form-control bg-primary', 'placeholder':' Saisir votre sujet'}})}}

<br>

	{{ form_label(form.message) }}
	{{ form_widget(form.message , {'attr':{'class':'form-control bg-info', 'placeholder':' Saisir votre message'}})}}

	<br>
	{{ form_widget(form.envoyer , {'attr':{'class':'form-control bg-dark'}})}}

	{{ form_end(form, {render_rest: true}) }}

	

{% endblock %}
