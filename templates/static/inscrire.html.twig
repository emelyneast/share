{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div ckass="container-fluid">
		<h1 class="text-dark text-center m-2">
			<marquee>Inscription</marquee></h1>
		<div class="row justify-content-center">
			<div class="col-8 bg-dark p-4 m-0 text-white">
				{{form_start(form)}}
				<div class="form-group">
					{{ form_label(form.nom , 'Nom', {'label_attr':{'class':'fw-bold text-dark'}}) }}
					{{ form_widget(form.nom , {'attr':{'class':'form-control bg-primary', 'placeholder':' Saisir votre nom'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.prenom) }}
					{{ form_widget(form.prenom , {'attr':{'class':'form-control bg-primary', 'placeholder':' Saisir votre prenom'}})}}
				</div>
				<div class="form-group">
					{{ form_label(form.dateN) }}
					{{ form_widget(form.dateN , {'attr':{'class':'form-control bg-primary'}})}}
				</div>
				<div class="form-group mx-auto text-center">

					{{ form_widget(form.inscription , {'attr':{'class':'form-control bg-dark'}})}}
				</div>

				{{ form_end(form, {render_rest: true}) }}

			</div>
		</div>
<div class="row justify-content-center">
			<div class="col-8 bg-dark p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table caption-top">
						<caption>Liste des inscrit</caption>
						<thead>
							<tr>
								<th scope="col">Nom</th>
								<th scope="col">Prenom</th>
								<th scope="col">dateN</th>
								<th scope="col">dateI</th>
								<th scope="col"></th>
								<th scope="col"></th>
								
							</tr>
						</thead>
						<tbody>
							{% for inscrire in inscrires %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									
									<td>{{inscrire.nom}}</td>
										<td>{{inscrire.prenom}}</td>
										<td>{{inscrire.dateN | date("d-m-Y") }}</td>
										<td>{{inscrire.dateIn | date("d-m-Y") }}</td>
									<td><a href="{{path('inscrire', {'id':inscrire.id})}}"><i class="bi bi-trash-fill"></i></a></td>
									<td><a href="{{path('modifU', {'id':inscrire.id})}}"><i class="bi bi-pen"></i></a></td>
									
										
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


		

	{% endblock %}
